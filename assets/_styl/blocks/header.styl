.header--main-container
  background: mainColor
  width 100%

.header--main
  position: relative
  center(containerMaxWidth, pad = sidePadding)
  display flex
  align-items center
  justify-content space-between
  height: 75px

.header__title
  color hightlightColor
  font-family headingFont
  rem(24px)

  @media screen and (max-width: 767px)
    margin-bottom 20px

.header__nav
.header__nav::before
.header__nav::after
  position: relative
  background: white
  width: 21px
  height: 4px
  border-radius 8px
  display: block
  transition: top 0.1s

.header__nav
  cursor: pointer
  margin-right auto

  &::before
    content: ''
    top: -8px

  &::after
    content: ''
    top: 4px

  @media screen and (max-width: 767px)
    margin-left 0

.header__nav-container
  cursor: pointer
  height: 36px;
  padding-top: 15px;

  &:hover
    .header__nav::before
      top: -11px

    .header__nav::after
      top: 7px

.header__link
  color hightlightColor
  rem(18px)
  font-family headingFont
  margin-right 35px
  &:last-child
    margin-right 0

.single-post__header
  margin-top: 45px
