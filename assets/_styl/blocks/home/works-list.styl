.works-list
  margin: 0

  .works-list-item
    text-align: left
    list-style none

    &-link
      display: block

    .work-picture-container,
    .work-description
      display: inline-block
      vertical-align: middle

    .work-picture-container
      width: 160px
      border-radius: 3px
      overflow: hidden
      margin-right: 20px
      border 1px solid #e3e3e3

    .work-details
      width: calc(100% - 185px)
      display: inline-block
      vertical-align: middle

    .work-title
      color: mainColor
      font-weight: bold

    .work-description
      text-align: left
      width 100%
      rem(14px)
      color: veryLightTextColor
      font-weight fontWeightBold

  +below(verySmall)
    .works-list-item
      margin-bottom: 20px
      width: calc(100% + 20px)
      margin-left: -10px

      .work-picture-container,
      .work-description
        display: block

      .work-picture-container
        border-radius: 0
        border: none

      .work-description
        width: 100%
        padding: 0 10px
        text-align: center

      .work-picture-container,
      .work-picture
        width: 100%
