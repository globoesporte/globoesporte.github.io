.intro-text-container
  text-align: left
  background-image: linear-gradient( 90deg, rgb(234,234,234) 0%, rgb(255,255,255) 100%)

.intro-text-inner-container
  padding: 70px 0 75px
  center(containerMaxWidth, pad = sidePadding)
  position: relative

  +below(desktop)
    text-align: center
    padding: 30px 0 35px

.intro-title
  rem(24px)
  position: relative
  z-index: 9
  font-weight: fontWeightSemiBold
  color: textColor

  +below(desktop)
    rem(18px)
    margin-bottom: 8px

.intro-text
  rem(18px)
  position: relative
  z-index: 9
  max-width 370px
  color: lighterTextColor

  +below(desktop)
    rem(14px)
    max-width: 100%

.octopus-mascot
  position: absolute
  top: 0
  right: 0
  max-width: 573px
  z-index: 2

  +below(desktop)
    display: none

.ge-letters
  position: absolute
  top: 50%
  transform: translateY(-50%)
  right: 440px

  +below(desktop)
    display: none
